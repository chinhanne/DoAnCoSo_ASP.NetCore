@{
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";

}
@model TheLoaiLv2

<div class="container">
    <h2 class="ltext-105 cl0 mt-3 text-center">
        Trang Quản Lý Thể Loại Level 2
    </h2>
    <table id="myTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên thể loại con</th>
                <th>Ngày tạo</th>
                <th>Ngày cập nhật</th>
                <th>Thể loại</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
        @if (ViewBag.TheLoaiLv2 != null && ViewBag.TheLoaiLv2.Count > 0)
        {
            @foreach (var item in ViewBag.TheLoaiLv2)
            {
                
                <tr>
                    <td width="20%">@item.Name</td>
                    <td width="20%">@String.Format("{0:dd/MM/yyyy}", item.DateCreated)</td>
                    <td width="20%">@String.Format("{0:dd/MM/yyyy}", item.DateUpdated)</td>
                    <td width="20%">@item.TheLoai.Name</td>
                    <td width="20%"><a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> | <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
                
            }
        }else{
            
            <tr>
                <p class="h3 mt-2">Không có thể loại nào!</p>
            </tr>
        }
        </tbody>
    </table>
    <a asp-controller="TheLoaiLv2" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
</div>
@section scripts {
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                    "zeroRecords": "Không tìm thấy kết quả",
                    "info": "Hiển thị _START_ đến _END_ trong tổng _TOTAL_ dòng",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(được lọc từ tổng số _MAX_ dòng)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                }
            });
        });
    </script>
    }